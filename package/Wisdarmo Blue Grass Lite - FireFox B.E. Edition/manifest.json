{
	"name": "Wisdarmo Blue Grass Lite: FireFox B.E. Editon [Alpha 2.5]",
	"description": "Block Published contents from features, Websites, and Social Media.",
	"version": "0.0.35",
	"manifest_version": 3,
	
	"icons": {
		"16": "img/icon16.png",
		"32": "img/icon32.png",
		"48": "img/icon48.png",
		"128": "img/icon128.png",
		"180": "img/icon180.png"
	},
	
	"permissions": ["storage", "activeTab"],
	
	"action": {
		"default_popup": "popup.html"
	},
	
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},
	
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"js/content.js"
			]
		}
	],
	
	"web_accessible_resources": [
		{
			"resources": [
				"*"
			],
			"matches": [
				"<all_urls>"
			]
		}
	]
}